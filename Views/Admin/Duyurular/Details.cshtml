@model EgitimSitesi.Models.DuyurularModel
@{
    ViewData["Title"] = "Duyuru Detayları";
   
}

<div class="container-fluid p-4">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold text-primary">Duyuru Detayları</h6>
            <div>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-sm">
                    <i class="fas fa-edit"></i> Düzenle
                </a>
                <a asp-action="Index" class="btn btn-secondary btn-sm">
                    <i class="fas fa-arrow-left"></i> Listeye Dön
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Left Column - Details -->
                <div class="col-md-8">
                    <table class="table table-bordered">
                        <tr>
                            <th width="150">ID</th>
                            <td>@Model.Id</td>
                        </tr>
                        <tr>
                            <th>Başlık</th>
                            <td>@Model.Title</td>
                        </tr>
                        <tr>
                            <th>Açıklama</th>
                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <th>Duyuru Türü</th>
                            <td>@Model.AnnouncementType</td>
                        </tr>
                        <tr>
                            <th>Buton Metni</th>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.ButtonText))
                                {
                                    @Model.ButtonText
                                }
                                else
                                {
                                    <span class="text-muted">Tanımlanmamış</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Buton URL</th>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.ButtonUrl))
                                {
                                    <a href="@Model.ButtonUrl" target="_blank">@Model.ButtonUrl</a>
                                }
                                else
                                {
                                    <span class="text-muted">Tanımlanmamış</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>İkon</th>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.IconClass))
                                {
                                    <i class="@Model.IconClass me-2"></i> @Model.IconClass
                                }
                                else
                                {
                                    <span class="text-muted">Tanımlanmamış</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Sıralama</th>
                            <td>@Model.Order</td>
                        </tr>
                        <tr>
                            <th>Durum</th>
                            <td>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pasif</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Oluşturma Tarihi</th>
                            <td>@Model.CreationDate.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <th>Duyuru Tarihi</th>
                            <td>@Model.CreationDate.ToString("dd.MM.yyyy")</td>
                        </tr>
                    </table>
                </div>
                
                <!-- Right Column - Image and Detail Content -->
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-header">
                            <h6 class="m-0">Görsel</h6>
                        </div>
                        <div class="card-body text-center">
                            @if (!string.IsNullOrEmpty(Model.ImagePath))
                            {
                                <img src="@Model.ImagePath" alt="@Model.Title" class="img-fluid" style="max-height: 250px;" />
                            }
                            else if (!string.IsNullOrEmpty(Model.IconClass))
                            {
                                <div class="py-4">
                                    <i class="@Model.IconClass fa-5x text-primary"></i>
                                    <p class="small text-muted mt-3">İkon kullanılıyor</p>
                                </div>
                            }
                            else
                            {
                                <div class="py-4">
                                    <i class="fas fa-image fa-5x text-secondary"></i>
                                    <p class="small text-muted mt-3">Görsel veya ikon bulunmuyor</p>
                                </div>
                            }
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.DetailContent))
                    {
                        <div class="card">
                            <div class="card-header">
                                <h6 class="m-0">Detay İçeriği</h6>
                            </div>
                            <div class="card-body">
                                <p>@Model.DetailContent</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div> 