@model EgitimSitesi.Models.KursModel
@{
    ViewData["Title"] = "Kurs Sil";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0 text-gray-800">Kurs Sil</h1>
        <a asp-controller="KursAdmin" asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Listeye Dön
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Kurs Silme Onayı</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-danger">
                <h5><i class="fas fa-exclamation-triangle me-2"></i> Uyarı!</h5>
                <p>Bu kursu silmek istediğinizden emin misiniz? Bu işlem geri alınamaz.</p>
            </div>

            <div class="row">
                <div class="col-md-7">
                    <table class="table table-bordered">
                        <tr>
                            <th width="150">ID</th>
                            <td>@Model.Id</td>
                        </tr>
                        <tr>
                            <th>Kurs Türü</th>
                            <td>@Model.Type</td>
                        </tr>
                        <tr>
                            <th>Açıklama</th>
                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <th>Sıra</th>
                            <td>@Model.Order</td>
                        </tr>
                        @if (!string.IsNullOrEmpty(Model.ButtonText))
                        {
                            <tr>
                                <th>Buton Metni</th>
                                <td>@Model.ButtonText</td>
                            </tr>
                        }
                        @if (!string.IsNullOrEmpty(Model.ButtonUrl))
                        {
                            <tr>
                                <th>Buton URL</th>
                                <td>@Model.ButtonUrl</td>
                            </tr>
                        }
                        <tr>
                            <th>Durum</th>
                            <td>
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Aktif</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Pasif</span>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Oluşturulma Tarihi</th>
                            <td>@Model.CreationDate.ToString("dd.MM.yyyy")</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-5">
                    <div class="card">
                        <div class="card-header">
                            <h6 class="m-0">Görsel</h6>
                        </div>
                        <div class="card-body text-center">
                            @if (!string.IsNullOrEmpty(Model.ImagePath))
                            {
                                <img src="@Model.ImagePath" alt="@Model.Type" class="img-fluid" style="max-height: 200px;" />
                            }
                            else
                            {
                                <div class="py-4">
                                    <i class="fas fa-book fa-5x text-secondary"></i>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>

            <form asp-controller="KursAdmin" asp-action="Delete" asp-route-id="@Model.Id" method="post" class="mt-4">
                <input type="hidden" name="Id" value="@Model.Id" />
                <div class="d-flex justify-content-end gap-2">
                    <a asp-controller="KursAdmin" asp-action="Index" class="btn btn-secondary">İptal</a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Sil
                    </button>
                </div>
            </form>
        </div>
    </div>
</div> 