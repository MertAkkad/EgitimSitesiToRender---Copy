@model EgitimSitesi.Models.KursModel
@{
    ViewData["Title"] = "Kurs Sil";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mb-0">Kurs Sil</h1>
        <a href="@Url.Action("Index", "KursAdmin", new { area = "" })" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-1"></i> Listeye Dön
        </a>
    </div>

    <div class="card shadow mb-4">
        <div class="card-header py-3 bg-danger text-white">
            <h6 class="m-0 font-weight-bold">Dikkat: Bu işlem geri alınamaz!</h6>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle me-2"></i>
                "<strong>@Model.Type</strong>" kursunu silmek istediğinize emin misiniz? Bu işlem geri alınamaz.
            </div>

            <div class="row mt-4">
                <div class="col-md-8">
                    <table class="table table-bordered">
                        <tr>
                            <th style="width: 150px;">Kurs Türü</th>
                            <td>@Model.Type</td>
                        </tr>
                        <tr>
                            <th>Açıklama</th>
                            <td>@Model.Description</td>
                        </tr>
                        <tr>
                            <th>Detaylar</th>
                            <td>@Model.Details</td>
                        </tr>
                        <tr>
                            <th>Durum</th>
                            <td>@(Model.IsActive ? "Aktif" : "Pasif")</td>
                        </tr>
                        <tr>
                            <th>Sıralama</th>
                            <td>@Model.Order</td>
                        </tr>
                        <tr>
                            <th>Oluşturma Tarihi</th>
                            <td>@Model.CreationDate.ToString("dd.MM.yyyy HH:mm")</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.ImagePath))
                    {
                        <div class="text-center">
                            <img src="@Model.ImagePath" alt="@Model.Type" class="img-fluid img-thumbnail" style="max-height: 200px;" />
                        </div>
                    }
                </div>
            </div>

            <form asp-action="Delete" asp-controller="KursAdmin" asp-route-id="@Model.Id" method="post" class="mt-4">
                <div class="form-group">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt me-1"></i> Kursu Sil
                    </button>
                    <a href="@Url.Action("Index", "KursAdmin")" class="btn btn-secondary ms-2">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div> 