@model EgitimSitesi.Models.SubeModel

@{
    ViewData["Title"] = "Şubeyi Sil";
    Layout = "_Layout";
}

<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card shadow mb-4">
                <div class="card-header py-3 bg-danger text-white d-flex justify-content-between align-items-center">
                    <h6 class="m-0 font-weight-bold">@Model.Name Şubesini Sil</h6>
                    <a asp-action="Index" class="btn btn-sm btn-outline-light">
                        <i class="fas fa-arrow-left me-1"></i>Listeye Dön
                    </a>
                </div>
                <div class="card-body">
                    <div class="alert alert-danger">
                        <i class="fas fa-exclamation-triangle me-2"></i>Bu şubeyi silmek istediğinizden emin misiniz? Bu işlem geri alınamaz!
                    </div>
                    
                    <div class="mt-4 mb-4">
                        <div class="row mb-2">
                            <div class="col-md-3 fw-bold">@Html.DisplayNameFor(model => model.Name):</div>
                            <div class="col-md-9">@Model.Name</div>
                        </div>
                        
                        <div class="row mb-2">
                            <div class="col-md-3 fw-bold">@Html.DisplayNameFor(model => model.Address):</div>
                            <div class="col-md-9">@Model.Address</div>
                        </div>
                        
                        <div class="row mb-2">
                            <div class="col-md-3 fw-bold">@Html.DisplayNameFor(model => model.TelNo):</div>
                            <div class="col-md-9">@Model.TelNo</div>
                        </div>
                        
                        <div class="row mb-2">
                            <div class="col-md-3 fw-bold">@Html.DisplayNameFor(model => model.CreationDate):</div>
                            <div class="col-md-9">@Model.CreationDate.ToString("dd.MM.yyyy HH:mm")</div>
                        </div>
                    </div>
                    
                    <div class="mt-4">
                        <form asp-action="Delete" method="post">
                            <input type="hidden" asp-for="Id" />
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i>Şubeyi Sil
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times me-1"></i>İptal
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 