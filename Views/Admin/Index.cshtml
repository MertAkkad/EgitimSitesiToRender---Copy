@model EgitimSitesi.Controllers.AdminControllers.AdminDashboardViewModel

@{
    ViewData["Title"] = "Yönetim Paneli";
    Layout = "_Layout"; // Using the default layout
}

<div class="container-fluid py-4">
    <h1 class="mb-4">Yönetim Paneli</h1>
    
    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Bannerlar</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.BannerCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-images fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <a href="/Admin/Banner" class="btn btn-sm btn-primary w-100">Yönet</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                İçerik Öğeleri</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.IcerikCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-file-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <a href="/Admin/Icerik" class="btn btn-sm btn-success w-100">Yönet</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Kurslar</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.KurslarCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-graduation-cap fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <a href="/Admin/Kurslar" class="btn btn-sm btn-info w-100">Yönet</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                Duyurular</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.DuyurularCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-bullhorn fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <a href="/Admin/Duyurular" class="btn btn-sm btn-warning w-100">Yönet</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Kadromuz</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.KadromuzCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-users fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <a href="/Admin/Kadromuz" class="btn btn-sm btn-danger w-100">Yönet</a>
                </div>
            </div>
        </div>
         <div class="col-md-3 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Şubelerimiz</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.SubelerCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-map-marker-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <a href="/Admin/Subeler" class="btn btn-sm btn-info w-100">Yönet</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Galeri</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.GaleriCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-map-marker-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <a href="/Admin/Gallery" class="btn btn-sm btn-info w-100">Yönet</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Hakkımızda</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@(Model.HakkimizdaCount > 0 ? "Düzenle" : "Ekle")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-info-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <a href="/Admin/Hakkimizda" class="btn btn-sm btn-primary w-100">Yönet</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Kayıt Formları</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.KayitFormuCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <a href="/Admin/KayitFormu" class="btn btn-sm btn-success w-100">Yönet</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-3 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                              Gelen Mesajlar</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.BizeYazinCount</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-clipboard-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <a href="/Admin/BizeYazin" class="btn btn-sm btn-success w-100">Yönet</a>
                </div>
            </div>
        </div>

        <div class="col-md-3 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                İletişim Bilgileri</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@(Model.IletisimCount > 0 ? "Düzenle" : "Ekle")</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-phone-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <a href="/Admin/Iletisim" class="btn btn-sm btn-warning w-100">Yönet</a>
                </div>
            </div>
        </div>
        
        <div class="col-md-3 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Site Düzeni</div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.ActiveLayout</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-palette fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
                <div class="card-footer p-2">
                    <a href="/Admin/LayoutSettings" class="btn btn-sm btn-primary w-100">Düzen Değiştir</a>
                </div>
            </div>
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="Logout" asp-controller="Admin" method="post" class="d-inline">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-danger">Çıkış Yap</button>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Any dashboard-specific JavaScript can go here
        });
    </script>
} 