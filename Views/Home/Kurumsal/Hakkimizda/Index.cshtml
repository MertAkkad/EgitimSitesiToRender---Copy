@model EgitimSitesi.Models.HakkimizdaModel

@{
    ViewData["Title"] = "Hakkımızda";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-4 text-primary mb-4">Hakkımızda</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Anasayfa</a></li>
                    <li class="breadcrumb-item">Kurumsal</li>
                    <li class="breadcrumb-item active" aria-current="page">Hakkımızda</li>
                </ol>
            </nav>
            <hr class="my-4">
        </div>
    </div>

    @if (Model != null)
    {
        <div class="row mb-5">
            @if (!string.IsNullOrEmpty(Model.ImagePath))
            {
                <div class="col-md-4 mb-4 mb-md-0">
                    <div class="rounded shadow overflow-hidden">
                        <img src="@Model.ImagePath" alt="Hakkımızda" class="img-fluid w-100" style="object-fit: cover; height: 100%;">
                    </div>
                </div>
                <div class="col-md-8">
                    <div class="card shadow-sm h-100">
                        <div class="card-body">
                            <h2 class="card-title h3 text-primary mb-4">Tarihçemiz</h2>
                            <div class="card-text">
                                @Html.Raw(Model.Tarihcemiz)
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h2 class="card-title h3 text-primary mb-4">Tarihçemiz</h2>
                            <div class="card-text">
                                @Html.Raw(Model.Tarihcemiz)
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-circle bg-primary text-white me-3">
                                <i class="fas fa-eye"></i>
                            </div>
                            <h2 class="card-title h3 mb-0">Vizyonumuz</h2>
                        </div>
                        <div class="card-text">
                            @Html.Raw(Model.Vizyonumuz)
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex align-items-center mb-3">
                            <div class="icon-circle bg-success text-white me-3">
                                <i class="fas fa-bullseye"></i>
                            </div>
                            <h2 class="card-title h3 mb-0">Misyonumuz</h2>
                        </div>
                        <div class="card-text">
                            @Html.Raw(Model.Misyonumuz)
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h3 class="h4">Bilgi</h3>
            <p>Hakkımızda bilgileri henüz eklenmemiştir. Lütfen daha sonra tekrar ziyaret ediniz.</p>
        </div>
    }
</div>

<style>
    .icon-circle {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 1.2rem;
    }
</style> 