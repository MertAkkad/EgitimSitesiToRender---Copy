@model EgitimSitesi.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container py-5">
    <div class="row">
        <div class="col-md-8 mx-auto text-center">
            <div class="card border-0 shadow-sm">
                <div class="card-body p-5">
                    <h1 class="display-4 fw-bold text-danger mb-4">Hata</h1>
                    <p class="lead mb-4">Üzgünüz, bir hata oluştu.</p>
                    
                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted mb-4">
                            <strong>İstek ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }
                    
                    <a asp-controller="Anasayfa" asp-action="Index" class="btn btn-primary btn-lg">
                        <i class="fas fa-home me-2"></i>Ana Sayfaya Dön
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
